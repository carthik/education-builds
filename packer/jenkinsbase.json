{
  "builders": [
    {
      "vm_name": "{{ user `vm_type`}}-base",
      "type": "vmware-vmx",
      "source_path": "output/{{ user `vm_type` }}-base-vmware/packer-centos-7.2-x86_64-vmware-base.vmx",
      "ssh_username": "root",
      "ssh_password": "puppet",
      "skip_compaction": "true",
      "shutdown_command": "{{user `shutdown_command`}}",
      "output_directory": "output/{{ user `vm_type`}}-base-vmware/",
      "ssh_pty": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sudo mkdir -p /training/file_cache;sudo chown -R training:training /training"]
    },
    {
      "type": "file",
      "source": "../file_cache/",
      "destination": "/training/file_cache"
    },
    {
      "type": "shell",
      "inline": ["mv /training/file_cache/installers/puppet-enterprise-{{user `pe_version`}}-el-7-x86_64.tar.gz /tmp/puppet-enterprise.tar.gz"]
    },
    {
      "execute_command": "{{.Vars}} sudo \"PATH=$PATH\" -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/sshd.sh",
        "scripts/pre_build.sh",
        "scripts/{{ user `vm_type` }}_pre_build.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "training",
    "arch": "i386",
    "iso_checksum": "f3aa74fd6ddc7b14ed4cf81db8135aee57814791",
    "iso_url": "http://mirrors.kernel.org/centos/6.7/isos/i386/CentOS-6.7-i386-bin-DVD1.iso",
    "ks_file": "ks.cfg",
    "os_name": "CentOS-6.7",
    "guest_os_type": "centos",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "system_user": "training",
    "system_user_password": "training",
    "training_branch": "master",
    "training_repo": "https://github.com/puppetlabs/puppetlabs-training-bootstrap.git",
    "vm_type": "training",
    "vm_memsize": "4096",
    "vm_disk_size": "20480",
    "vm_cores": "2",
    "pe_version": "2016.1.1",
    "ptb_version": "4.2"
  }
}
{
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "output/{{user `vm_type`}}-ptb{{user `ptb_version`}}-{{.Provider}}.box",
      "keep_input_artifact": true
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "PE_STATUS={{user `pe_status`}}",
        "PE_VERSION={{user `pe_version`}}",
        "RUBY_LIB={{user `rubylib`}}",
        "TRAINING_REPO={{user `training_repo`}}",
        "TRAINING_BRANCH={{user `training_branch`}}",
        "VM_TYPE={{user `vm_type`}}"
      ],
      "execute_command": "{{.Vars}} sudo \"PATH=$PATH\" -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/{{user `vm_type`}}_build.sh",
        "scripts/cleanup.sh",
        "scripts/{{user `vm_type`}}_cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "training",
    "arch": "i386",
    "guest_os_type": "centos",
    "iso_checksum": "f3aa74fd6ddc7b14ed4cf81db8135aee57814791",
    "iso_url": "http://mirrors.kernel.org/centos/6.7/isos/i386/CentOS-6.7-i386-bin-DVD1.iso",
    "ks_file": "ks.cfg",
    "os_name": "CentOS-6.7",
    "pe_status": "release",
    "pe_version": "2016.1.1",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "system_user": "training",
    "system_user_password": "training",
    "training_branch": "master",
    "training_repo": "https://github.com/puppetlabs/puppetlabs-training-bootstrap.git",
    "vm_type": "training",
    "vm_memsize": "4096",
    "vm_disk_size": "20480",
    "vm_cores": "2",
    "ptb_version": "4.2"
  }
}
