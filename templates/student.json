{
  "builders": [
    {
      "vm_name": "{{ user `vm_type`}}",
      "type": "vmware-vmx",
      "source_path": "output/{{ user `vm_type` }}-base-vmware/{{ user `vm_type` }}-base.vmx",
      "ssh_username": "root",
      "ssh_password": "puppet",
      "skip_compaction": "true",
      "shutdown_command": "{{user `shutdown_command`}}",
      "output_directory": "output/{{ user `vm_type`}}-vmware/",
      "ssh_pty": "true",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `vm_memsize`}}",
        "numvcpus": "{{user `vm_cores`}}",
        "rtc.diffFromUTC": "0"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "output/{{user `vm_type`}}-ptb{{user `ptb_version`}}-{{.Provider}}.box"
    },
    {
      "type": "shell-local",
      "script": "scripts/box-to-ova.sh",
      "environment_vars": [
        "VM_TYPE={{user `vm_type`}}",
        "PE_VERSION={{user `pe_version`}}",
        "PTB_VERSION={{user `ptb_version`}}"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["useradd training",
                 "echo \"training:training\" | chpasswd",
                 "echo \"training ALL=(ALL) NOPASSWD: ALL\" >> /etc/sudoers",
                 "mkdir -p /training/file_cache",
                 "chown -R training:training /training"]
    },
    {
      "environment_vars": [
        "PE_STATUS={{user `pe_status`}}",
        "PE_VERSION={{user `pe_version`}}",
        "RUBY_LIB={{user `rubylib`}}",
        "TRAINING_REPO={{user `training_repo`}}",
        "TRAINING_BRANCH={{user `training_branch`}}",
        "VM_TYPE={{user `vm_type`}}"
      ],
      "execute_command": "{{.Vars}} sudo \"PATH=$PATH\" -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/sshd.sh",
        "scripts/pre_build.sh",
        "scripts/{{user `vm_type`}}_build.sh",
        "scripts/cleanup.sh",
        "scripts/{{user `vm_type`}}_cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "shutdown_command": "sudo shutdown -P now",
    "vm_type": "student",
    "hostname": "student",
    "vm_memsize": "1024",
    "vm_disk_size": "10240",
    "vm_cores": "1",
    "pe_status": "release",
    "pe_version": "2016.1.1",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "training_branch": "master",
    "training_repo": "https://github.com/puppetlabs/puppetlabs-training-bootstrap.git",
    "vm_cores": "2",
    "ptb_version": "5.0"
  }
}
