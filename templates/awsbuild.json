{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-c7d092f7",
      "instance_type": "m3.large",
      "ssh_username": "centos",
      "ami_name": "PE-{{user `pe_version`}}-{{ user `vm_type`}}-{{ user `ptb_version`}}-{{isotime \"Jan02-0304\" }}",
      "ssh_pty": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
      "inline": ["useradd training",
                 "echo \"training:training\" | chpasswd",
                 "echo \"training ALL=(ALL) NOPASSWD: ALL\" >> /etc/sudoers"
                ]
    },
    {
      "environment_vars": [
        "PE_STATUS={{user `pe_status`}}",
        "PE_VERSION={{user `pe_version`}}",
        "RUBY_LIB={{user `rubylib`}}",
        "TRAINING_REPO={{user `training_repo`}}",
        "TRAINING_BRANCH={{user `training_branch`}}",
        "VM_TYPE={{user `vm_type`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/sshd.sh",
        "scripts/pre_build.sh",
        "scripts/{{user `vm_type`}}_pre_build.sh",
        "scripts/{{user `vm_type`}}_build.sh",
        "scripts/cleanup.sh",
        "scripts/{{user `vm_type`}}_cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "vagrant",
    "arch": "",
    "guest_os_type": "centos",
    "ks_file": "",
    "iso_checksum": "",
    "iso_url": "",
    "os_name": "",
    "pe_status": "release",
    "pe_version": "2016.1.1",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "system_user": "vagrant",
    "system_user_password": "vagrant",
    "training_branch": "master",
    "training_repo": "https://github.com/puppetlabs/education-builds.git",
    "vm_type": "",
    "vm_memsize": "",
    "vm_disk_size": "",
    "vm_cores": "",
    "ptb_version": "5.0"
  }
}
{
  "builders": [
    {
      "vm_name": "{{ user `vm_type`}}-base",
      "type": "vmware-vmx",
      "source_path": "output/education-base-vmware/education-base.vmx",
      "ssh_username": "root",
      "ssh_password": "puppet",
      "shutdown_command": "{{user `shutdown_command`}}",
      "output_directory": "output/{{ user `vm_type`}}-base-vmware/",
      "ssh_pty": "true",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `vm_memsize`}}",
        "numvcpus": "{{user `vm_cores`}}",
        "rtc.diffFromUTC": "0"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "file_cache/",
      "destination": "/training/file_cache"
    },
    {
      "type": "shell",
      "inline": ["mv /training/file_cache/installers/puppet-enterprise-{{user `pe_version`}}-el-7-x86_64.tar.gz /tmp/puppet-enterprise.tar.gz"]
    },
    {
      "execute_command": "{{.Vars}} sudo \"PATH=$PATH\" -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/sshd.sh",
        "scripts/pre_build.sh",
        "scripts/{{ user `vm_type` }}_pre_build.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "training",
    "vm_type": "training",
    "vm_memsize": "4096",
    "vm_disk_size": "20480",
    "vm_cores": "2",
    "pe_version": "2016.1.1",
    "ptb_version": "5.0"
  }
}
